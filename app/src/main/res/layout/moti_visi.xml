<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/borde_azul">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOTIVO DE VISITA :"
            android:textColor="#000000"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spn_tipo_visi"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/borde_azul"
            android:spinnerMode="dialog"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:entries="@array/motivos"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edt_dire_terc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borde_indi_vent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:hint="DIRECCION"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColorHint="#000000"/>

        <EditText
            android:id="@+id/edt_dire_refe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borde_indi_vent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:hint="REFERENCIA"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textColorHint="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_acep_moti"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/boton_color_dupree"
                android:text="ACEPTAR"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_cerr_moti"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/boton_color_dupree"
                android:text="CERRAR"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_aler_moti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp" />

    </LinearLayout>